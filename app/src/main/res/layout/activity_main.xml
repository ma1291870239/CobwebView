<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ma.generalview.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/main_radarchat"
                style="@style/MainText"
                android:text="雷达图 Radar Chat" />
            <TextView
                android:id="@+id/main_googlesearch"
                style="@style/MainText"
                android:text="谷歌搜索 Google Search" />
            <TextView
                android:id="@+id/main_verifyCodeInput"
                style="@style/MainText"
                android:text="验证码输入 Verify Code Input" />
            <TextView
                android:id="@+id/main_spanInput"
                style="@style/MainText"
                android:text="仿@字块显示 Span Input" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
